# Environment Variables for Railway Deployment
# Copy this to .env and fill in your actual values

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bookbuddy

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-here

# OpenAI API Key for AI editing features
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Node Environment (Railway sets this automatically)
NODE_ENV=production

# Optional: Port (Railway sets this automatically)
PORT=3000
